{
  "manifest_version": 3,
  "name": "TDXReporter",
  "version": "1.0",
  "description": "An extension that allows you to run TDX reports when supplied a UUID.",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "side_panel": {
    "default_path": "html/side-panel.html"
  },
  "action": {
    "default_title": "Click to open panel"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content_script.js"
      ],
      "all_frames": true
    }
  ],
  "host_permissions": [
    "https://tdx.umn.edu/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "js/run_report.js",
        "js/check_url.js",
        "js/check_loaded.js",
        "js/content_script.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "sidePanel",
    "activeTab",
    "tabs",
    "scripting",
    "clipboardRead",
    "clipboardWrite"
  ]
}
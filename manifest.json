{
    "manifest_version": 3,
    "name": "TDXReporter",
    "version": "1.0",
    "description": "An extension that allows you to run TDX reports when supplied a UUID.",
    "icons": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "side_panel": {
      "default_path": "html/sidepanel.html"
    },
    "action": {
      "default_title": "Click to open panel"
    },
    "background": {
      "service_worker": "js/service-worker.js"
    },
    "content_scripts": [
      { 
        "matches": ["https://tdx.umn.edu/TDNext/Apps/29/Reporting/*"],
        "js": ["js/tdx-content.js"]
      }
    ],
    "host_permissions": [
      "https://tdx.umn.edu/*"
    ],
    "web_accessible_resources": [
    {
      "resources": ["js/inject.js"],
      "matches": ["<all_urls>"]
    }
    ],
    "permissions": ["sidePanel", "activeTab", "tabs", "scripting"]
}